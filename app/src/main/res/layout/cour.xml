<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:weightSum="1">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informations :"
                android:id="@+id/textView27"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.04"
                android:gravity="fill_vertical"
                android:textSize="15dp"
                android:paddingBottom="10px"
                android:autoText="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Matière :"
                    android:id="@+id/textView17"
                    android:gravity="center_vertical"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rien"
                    android:id="@+id/infoCour"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:maxLines="2"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Heure début :"
                    android:gravity="center_vertical"
                    android:id="@+id/textView18"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rien"
                    android:id="@+id/infoHeureD"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Heure fin :"
                    android:gravity="center_vertical"
                    android:id="@+id/textView20"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rien"
                    android:id="@+id/infoHeureF"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Salle :"
                    android:id="@+id/textView22"
                    android:gravity="center_vertical"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rien"
                    android:id="@+id/infoSalle"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Enseignant :"
                    android:id="@+id/textView24"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:gravity="center_vertical"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rien"
                    android:id="@+id/infoEnsei"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taches :"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.04"
                android:gravity="fill_vertical"
                android:textSize="15dp"
                android:paddingBottom="10px"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Aucune tache."
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.0"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/ic_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp" />

</RelativeLayout>